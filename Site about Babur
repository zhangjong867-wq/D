    <script>
        AOS.init({ duration: 1200, once: true });

        function showMapInfo(title, desc) {
            const card = document.getElementById('map-info-card');
            document.getElementById('map-title').innerText = title;
            document.getElementById('map-desc').innerText = desc;
            card.style.display = 'block';
            card.className = 'info-card block animate-in slide-in-from-bottom-4 duration-300';
        }

        function closeMapInfo() {
            document.getElementById('map-info-card').style.display = 'none';
        }

        const rubais = [
            "Кто предан был, того не предавай,<br>Кто в бедах верным был, не забывай.",
            "Чужбина — клетка, как её ни укрась,<br>Душа стремится в край, где родилась.",
            "Не обижай людей, коль хочешь долго жить,<br>Старайся добрым словом сердце оживить.",
            "Тот, кто богат душой, не знает нищеты,<br>В терпенье и труде — залог твоей мечты.",
            "Что пользы в том, что ты владыка всей земли,<br>Коль годы жизни прахом утегли?"
        ];

        let rubaiIndex = 0;
        function changeRubai() {
            const container = document.getElementById('rubai-display');
            const text = document.getElementById('rubai-text');
            container.style.opacity = '0';
            setTimeout(() => {
                rubaiIndex = (rubaiIndex + 1) % rubais.length;
                text.innerHTML = rubais[rubaiIndex];
                container.style.opacity = '1';
            }, 500);
        }
    </script>

    <style>
        .animate-in { animation: fadeIn 0.4s ease-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translate(-50%, 20px); } to { opacity: 1; transform: translate(-50%, 0); } }
    </style>
